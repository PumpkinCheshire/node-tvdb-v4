{
  "name": "tvdb-api",
  "version": "1.0.0",
  "description": "A fully-featured API interface for The TVDB",
  "author": "David Ludwig",
  "keywords": [
    "tvdb",
    "api",
    "movie",
    "tv"
  ],
  "license": "ISC",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf -rf ./dist ./coverage ./.nyc_output",
    "coverage": "nyc yarn run test",
    "coveralls": "coveralls < ./coverage/lcov.info",
    "test": "mocha -r node_modules/ts-node/register ./test/**/*.spec.ts --timeout 5000"
  },
  "devDependencies": {
    "@types/chai": "^4.2.16",
    "@types/chai-as-promised": "^7.1.3",
    "@types/json-bigint": "^1.0.0",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.37",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.1.0",
    "dotenv": "^8.2.0",
    "mocha": "^8.3.2",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "nyc": {
    "all": true,
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "reporter": [
      "lcov",
      "text"
    ]
  }
}
